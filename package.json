{
    "name": "prono-monorepo",
    "version": "1.0.0",
    "private": true,
    "description": "Hono monorepo with React frontend",
    "scripts": {
        "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter web dev\"",
        "build": "pnpm --filter api build && pnpm --filter web build",
        "type-check": "pnpm -r --parallel type-check",
        "lint": "pnpm -r --parallel lint",
        "test": "pnpm -r --parallel test"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "concurrently": "^8.2.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=8.0.0"
    }
}